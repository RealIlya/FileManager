<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="MenuItem" TargetType="MenuItem">
        <Setter Property="Background" Value="{StaticResource UltraLightDarkBaseBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MediumBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource BaseFont }" />
        <Setter Property="FontSize" Value="{StaticResource Medium}" />
        <Setter Property="FontWeight" Value="Light" />
    </Style>

    
    <Style x:Key="MenuUpper" TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource LightBaseBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MediumBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource BaseFont }" />
        <Setter Property="FontSize" Value="{StaticResource Medium}" />
        <Setter Property="FontWeight" Value="Light" />
    </Style>
    
    
</ResourceDictionary>